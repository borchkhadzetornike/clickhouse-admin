# ── JWT (shared across services) ─────────────────────────
JWT_SECRET=super-secret-jwt-key-change-in-production
JWT_EXPIRATION_MINUTES=60

# ── Auth service Postgres ────────────────────────────────
AUTH_DATABASE_URL=postgresql://auth_user:auth_pass@postgres-auth:5432/auth_db

# ── Governance service Postgres ──────────────────────────
GOV_DATABASE_URL=postgresql://gov_user:gov_pass@postgres-governance:5432/governance_db

# ── AES-128 encryption key for CH passwords (32 hex chars = 16 bytes)
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef
